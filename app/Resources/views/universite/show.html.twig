{% extends 'base.html.twig' %}

{% block body %}
    <h1>Universite</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ universite.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ universite.nom }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ universite.adresse }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('universite_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('universite_edit', { 'id': universite.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
